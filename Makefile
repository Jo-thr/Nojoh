# â”‚                   Setup                     â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

DOCKER_COMPOSE = docker compose
ENV_FILE = .env

init:
	$(MAKE) check-env
	$(MAKE) install
	$(MAKE) db-generate

check-env:
	@test -f $(ENV_FILE) || (echo "ğŸš¨ Fichier .env manquant ! Copiez .env.example en .env avant de dÃ©marrer." && exit 1)

create-env:
	@cp .env.example .env
	@echo "âœ… Fichier .env gÃ©nÃ©rÃ©. Remplissez-le avec vos variables dâ€™environnement."

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚                Installations                 â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

install:
	pnpm install

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚              Project Control                 â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

up:
	$(DOCKER_COMPOSE) up -d --build

restart:
	$(DOCKER_COMPOSE) restart

down:
	$(DOCKER_COMPOSE) down

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚                  Prisma                      â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

validate-prisma:
	npx prisma validate --schema=prisma/schema.prisma

db-migrate:
	@if [ -z "$(name)" ]; then \
		echo "âŒ Merci de fournir un nom avec 'make db-migrate name=ton_nom'"; \
		exit 1; \
	fi
	DATABASE_URL=$(shell grep "^DATABASE_URL_LOCAL=" .env | cut -d '=' -f2- | tr -d '"') \
	npx prisma migrate dev --name $(name) --schema=prisma/schema.prisma

db-reset:
	DATABASE_URL=$(shell grep "^DATABASE_URL_LOCAL=" .env | cut -d '=' -f2- | tr -d '"') \
	npx prisma migrate reset --force --schema=prisma/schema.prisma

db-pull:
	DATABASE_URL=$(shell grep "^DATABASE_URL_LOCAL=" .env | cut -d '=' -f2- | tr -d '"') \
	npx prisma db pull --schema=prisma/schema.prisma

db-generate: validate-prisma
	DATABASE_URL=$(shell grep "^DATABASE_URL_LOCAL=" .env | cut -d '=' -f2- | tr -d '"') \
	npx prisma generate --schema=prisma/schema.prisma

db-seed:
	DATABASE_URL=$(shell grep "^DATABASE_URL_LOCAL=" .env | cut -d '=' -f2- | tr -d '"') \
	npx tsx prisma/seed.ts

reset-db:
	$(MAKE) db-reset
	$(MAKE) db-seed

db-studio:
	npx prisma studio --schema=prisma/schema.prisma

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚              Logs & Debugging                â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

logs:
	$(DOCKER_COMPOSE) logs -f

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚                   Clean                      â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

clean:
	$(DOCKER_COMPOSE) down -v

clean-next:
	rm -rf .next